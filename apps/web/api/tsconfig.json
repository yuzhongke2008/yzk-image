{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["./**/*", "../../api/src/**/*"],
  "exclude": ["node_modules"]
}
