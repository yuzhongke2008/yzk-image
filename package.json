{
  "name": "z-image",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "dev:web": "turbo run dev --filter=@z-image/web",
    "dev:api": "turbo run dev --filter=@z-image/api",
    "build:web": "turbo run build --filter=@z-image/web",
    "build:api": "turbo run build --filter=@z-image/api",
    "build:shared": "turbo run build --filter=@z-image/shared",
    "deploy:cf-pages": "pnpm build:web && cd apps/web && wrangler pages deploy dist --project-name=z-image",
    "deploy:cf-workers": "cd apps/api && wrangler deploy",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=apps/web/dist",
    "docker:build": "docker build -t z-image-api .",
    "docker:build:web": "docker build -f Dockerfile.web -t z-image-web .",
    "docker:run": "docker run -p 8787:8787 --env-file .env z-image-api",
    "docker:compose": "docker compose up",
    "docker:compose:dev": "docker compose --profile dev up"
  },
  "dependencies": {
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@vitest/coverage-v8": "^4.0.15",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15",
    "wrangler": "^3.90.0"
  }
}
